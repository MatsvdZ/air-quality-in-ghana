<section class="container">
  <header class="page-head">
    <h1 class="h1"><%= title %></h1>
    <p class="muted">Update measurement details.</p>
  </header>

  <% if (error) { %><div class="alert"><%= error %></div><% } %>

  <form class="card form" method="POST" action="/admin/measurements/<%= measurement._id %>">
    <label class="field">
      <span class="field__label">Location</span>
      <select class="input" name="locationId" required>
        <% locations.forEach(l => { %>
          <option value="<%= l.locationId %>" <%= (l.locationId === measurement.locationId ? 'selected' : '') %>>
            <%= l.locationId %> — <%= l.name %>
          </option>
        <% }) %>
      </select>
    </label>

    <label class="field">
      <span class="field__label">Tube ID (optional)</span>
      <input class="input" name="tubeId" value="<%= measurement.tubeId || '' %>">
    </label>

    <div class="btnrow">
      <label class="field" style="flex:1;">
        <span class="field__label">Period (YYYY-MM)</span>
        <input class="input" name="period" required value="<%= measurement.period %>">
      </label>

      <label class="field" style="flex:1;">
        <span class="field__label">NO₂</span>
        <input class="input" name="no2" type="number" step="0.1" required value="<%= measurement.no2 %>">
      </label>
    </div>

    <div class="btnrow">
      <button class="btn btn--primary" type="submit">Save</button>
      <a class="btn btn--ghost" href="/admin/measurements">Cancel</a>
    </div>
  </form>
</section>