<section class="container">
  <header class="page-head">
    <h1 class="h1"><%= title %></h1>
    <p class="muted">Add a NO₂ measurement for a chosen location and month (YYYY-MM).</p>
  </header>

  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>

  <form class="card form" method="POST" action="/admin/measurements">
    <label class="field">
      <span class="field__label">Location</span>
      <select class="input" name="locationId" required>
        <option value="">Choose…</option>
        <% locations.forEach(l => { %>
          <option value="<%= l.locationId %>"><%= l.locationId %> — <%= l.name %></option>
        <% }) %>
      </select>
    </label>

    <label class="field">
      <span class="field__label">Tube ID (optional)</span>
      <input class="input" name="tubeId" placeholder="B11">
    </label>

    <div class="btnrow">
      <label class="field" style="flex:1;">
        <span class="field__label">Period (YYYY-MM)</span>
        <input class="input" name="period" required placeholder="2025-10" inputmode="numeric">
      </label>

      <label class="field" style="flex:1;">
        <span class="field__label">NO₂ (µg/m³)</span>
        <input class="input" name="no2" type="number" step="0.1" required placeholder="12.3">
      </label>
    </div>

    <div class="btnrow">
      <button class="btn btn--primary" type="submit">Save measurement</button>
      <a class="btn btn--ghost" href="/admin">Cancel</a>
    </div>
  </form>
</section>